<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/screenTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="24dp"
        android:text="Location info"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/titleTextViewPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/screenTitleTextView"
        app:layout_constraintTop_toBottomOf="@id/screenTitleTextView"
        android:layout_marginTop="64dp"
        android:textSize="24sp"
        android:text="Title:"/>
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleTextViewPlaceholder"
        app:layout_constraintStart_toStartOf="@id/titleTextViewPlaceholder"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:text="My home"/>
    <TextView
        android:id="@+id/noteTextViewPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="@id/titleTextView"
        android:layout_marginTop="32dp"
        android:text="Note:"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/noteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/noteTextViewPlaceholder"
        app:layout_constraintStart_toStartOf="@id/noteTextViewPlaceholder"
        android:text="Some random note"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:maxLines="5"/>
    <TextView
        android:id="@+id/dateCreatedTextViewPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/noteTextView"
        app:layout_constraintStart_toStartOf="@id/noteTextView"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        android:text="Date created:"/>
    <TextView
        android:id="@+id/dateCreatedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dateCreatedTextViewPlaceholder"
        app:layout_constraintStart_toStartOf="@id/dateCreatedTextViewPlaceholder"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:text="14.06.2020 11:56"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/editButton"
        android:layout_width="176dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/dateCreatedTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        android:layout_marginTop="128dp"
        android:text="Edit"/>
</androidx.constraintlayout.widget.ConstraintLayout>